# OpenAI API Key (required)
OPENAI_API_KEY=your_openai_api_key_here

# Application settings
DEBUG=true
HOST=0.0.0.0
PORT=8000

# TTS Settings (Optional - defaults are optimized for speed + quality)
TTS_MODEL=tts-1             # Fast & high quality. Use "tts-1-hd" for even better quality (slower)
TTS_VOICE=nova              # Best for Punjabi: nova (female), onyx (male), shimmer, alloy, echo, fable
TTS_SPEED=1.0               # 0.25-4.0, normal speed. Use 0.9 for slower/clearer, 1.1 for faster

